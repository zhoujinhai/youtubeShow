	
<%- include('../components/header') %>
	<%- include('../components/hint') %>
	
	<%- include('nav-header') %>
    <div id="repsw" class="container">
        
        <form class="form-horizontal" role="form" method="post" action="/user/<%= username %>/admin/changepsw">
            <div class="form-group">
                <label for="firstname" class="col-sm-2 control-label">原始密码</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="oldpsw" required>
                </div>
            </div>
 
            <div class="form-group">
                <label class="col-sm-2 control-label">新密码</label>
	            <div class="col-sm-4">
                    <input class="form-control" placeholder="密码" type="password" name="newpsw" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">重复密码</label>
	            <div class="col-sm-4">
                    <input class="form-control" placeholder="重复密码" type="password" name="repsw" required>
                </div>
            </div>
           
            <div class="form-group">
                <label class="col-sm-2 control-label"><span><a class="back" href="javascript:window.history.back();">返回</a><span></label>
                <div class="col-sm-4">
                   <button type="submit" class="btn btn-primary btn-lg btn-block">提交</button>
                </div>
           </div>
        
        </form>
   </div>

 </body>
</html> 

