<%- include('../components/header') %>
	<%- include('../components/hint') %>
	
	<%- include('nav-header') %>
    <div id="reInfo" class="container">
        

        <form class="form-horizontal" role="form" method="post">
              <div class="form-group">
                  <label for="firstname" class="col-sm-2 control-label">用户名</label>
                  <div class="col-sm-4">
                     <input type="text" class="form-control" name="newusername" placeholder="请输入名字" required>
                  </div>
              </div>
 
            <div class="form-group">
                <label class="col-sm-2 control-label">性别</label>
                <div class="col-sm-4">
                  <select class="form-control" name="gender">
                       <option value="m">男</option>
                       <option value="f">女</option>
                    </select>
              </div>
            </div>
            
            <div class="form-group">
                <label class="col-sm-2 control-label">邮箱</label>
              <div class="col-sm-4">
                    <input class="form-control" placeholder="请输入有效邮箱" type="text" name="email" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label"><span><a class="back" href="/user/<%= username %>/admin/changepsw"">修改密码</a><span></label>
                <div class="col-sm-4">
                   <button type="submit" class="btn btn-primary btn-lg btn-block">更改</button>
                </div>
           </div>
        
        </form>
   </div>

  </body>
</html>

